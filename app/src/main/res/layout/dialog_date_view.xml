<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pickerview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tvDatePickerYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:text="确定"
            android:textColor="#33ccff"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="horizontal">

        <com.tubb.picker.library.PickerView
            android:id="@+id/pvYear"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            pickerview:MaxTextSize="20sp"
            pickerview:MinTextSize="15sp"
            pickerview:TextColor="#33ccff" />

        <com.tubb.picker.library.PickerView
            android:id="@+id/pvMonth"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            pickerview:MaxTextSize="20sp"
            pickerview:MinTextSize="15sp"
            pickerview:TextColor="#33ccff" />

        <com.tubb.picker.library.PickerView
            android:id="@+id/pvDay"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            pickerview:MaxTextSize="20sp"
            pickerview:MinTextSize="15sp"
            pickerview:TextColor="#33ccff" />
    </LinearLayout>
</LinearLayout>
